<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
<mapper namespace="userMapper">
     
     
      <select id="selectAll" resultType="com.nusang.dto.User">
        SELECT
            *
        FROM
            NUSER
    </select>
     
     
       <select id="findBy"  resultType="com.nusang.dto.User">
        SELECT
            *
        FROM
            NUSER
        WHERE 
        ${search} = #{keyword}
    </select>
    
     <insert id="insert"  > 
        INSERT INTO NUSER (userid,username,password,role,logintype,email,location)
         VALUES (#{userid}, #{username}, #{password}, #{role},#{logintype},#{email},#{location}) 
    </insert>
</mapper>

